<script>
function isNull(){
	var num=document.getElementById("num").value;
	var aj = $.ajax({
	    type: 'POST',
        url: 'UserCheckServlet' ,
	    data: {num:num,password:""},
	    success: function (data) {
         if(data==2){
        	alert("账号不存在，请确认账号！");
         }
            
           
        },
        error: function (data) {
            alert(data);
        }

	});
}

$(function(){
	
	 $("#btnOK").click(function(){
		
		var num=$("#num").val();
		var password=$("#password").val();
		
		if(num==""||password==""){
			alert("账号或密码不能为空！");return;
		}
		 var aj = $.ajax({

			     type: 'POST',

			     url: 'UserCheckServlet' ,

			    data: {num:num,password:password},
				
			  

			    success: function (data) {
                 if(data==1){
                	window.location.href("first.jsp");
                 }
                 if(data==2){
                	alert("登陆失败，密码错误！");
                 }
                    
                   
                },
                error: function (data) {
                    alert(data);
                }

			});
			
		
	 });
	
	
});

</script>
